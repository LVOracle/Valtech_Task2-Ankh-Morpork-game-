@model AnkhMorpork.ViewModels.RegisterViewModel
<h2>Registration of new player</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div>
         @Html.ValidationMessage("ModelOnly")
    </div>
    <div>
        @Html.Label("Name")
        @Html.TextBox("Name")
        @Html.ValidationMessage("Name")
    </div>
    <div>
        @Html.Label("Password")
        @Html.TextBox("Password")
        @Html.ValidationMessage("Password")
    </div>
    <div>
        @Html.Label("PasswordConfirm")
        @Html.TextBox("PasswordConfirm")
        @Html.ValidationMessage("PasswordConfirm")
    </div>
    <div>
        <input type="submit" value="Registration" />
    </div>
}