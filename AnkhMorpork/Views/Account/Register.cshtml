@model AnkhMorpork.ViewModels.RegisterViewModel
<h2>Registration of new player</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div>
         @Html.ValidationMessage("ModelOnly")
    </div>
    <div>
        @Html.Label("Name")
        @Html.TextBox("Name")
        @Html.ValidationMessageFor(n => n.Name)
    </div>
    <div>
        @Html.Label("Password")
        @Html.Password("Password")
        @Html.ValidationMessageFor(p => p.Password)
    </div>
    <div>
        @Html.Label("PasswordConfirm")
        @Html.Password("PasswordConfirm")
        @Html.ValidationMessageFor(ps => ps.PasswordConfirm)
    </div>
    <div>
        <input type="submit" value="Registration" />
    </div>
}